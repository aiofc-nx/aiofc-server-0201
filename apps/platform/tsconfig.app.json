{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/platform",
    "types": ["node"],
    "tsBuildInfoFile": "../../dist/out-tsc/platform/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "include": ["src/**/*.ts", "../../packages/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "references": [
    {
      "path": "../../packages/zod-env/tsconfig.lib.json"
    },
    {
      "path": "../../packages/pino-logger/tsconfig.lib.json"
    }
  ]
}
